---
const services = [
  {
    name: 'Concrete removal',
    description:
      'Breakout and disposal of existing concrete, asphalt, and earth for builders, homeowners, and businesses.',
  },
  {
    name: 'Material trucking',
    description:
      'Transporation of stone, earth, and other materials to and from your job site, home, or business.',
  },
  {
    name: 'Commercial snow removal',
    description:
      'Unlimited snow plowing for a monthly fee with additional salt runs as needed. Rest assured snow will not get in the way of your business.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Services</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="flex flex-col gap-12 rounded-3xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
